.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.layer1 {
  width: 750rpx;
  height: 200rpx;
  margin-top: 20px;
  display: flex;
  justify-content: space-around;
  position: relative;
}
image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.layer2 {
  width: 750rpx;
  height: 200rpx;
  margin-top: 40px;
  display: flex;
  justify-content: space-evenly;
